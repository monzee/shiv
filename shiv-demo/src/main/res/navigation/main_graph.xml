<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/login"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/login"
        android:label="Login"
        android:name="ph.codeia.shiv.demo.login.LoginFragment">

        <action
            android:id="@+id/to_fizzbuzz"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/push_out"
            app:popEnterAnim="@anim/pop_in"
            app:popExitAnim="@android:anim/slide_out_right"
            app:destination="@id/fizzbuzz" />

    </fragment>

    <fragment
        android:id="@+id/fizzbuzz"
        android:label="FizzBuzz"
        android:name="ph.codeia.shiv.demo.fizzbuzz.FizzBuzzFragment" />

</navigation>